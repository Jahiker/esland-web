---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle }: Props = Astro.props;
---

<article
  class={`${Astro.props.class} 
relative 
rounded-xl 
backdrop-blur-xl 
border 
border-black/10 
shadow-inner 
shadow-white/10`}
>
  <h2>{title}</h2>
  {subtitle && <h3>{subtitle}</h3>}
</article>
