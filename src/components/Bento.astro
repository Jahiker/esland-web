---
import BentoItem from "./BentoItem.astro";

import { getI18N } from "../i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section
  class={`
    w-full max-w-[1400px]
    grid lg:grid-cols-10 auto-rows-[30rem] gap-4
    mx-auto p-6 md:p-12 lg:p-20
  `}
>
  <BentoItem class="col-span-10 md:col-span-4" title={i18n.BENTO_TITLE_CARD_01}>
    <div
      slot="image"
      class="absolute left-0 top-0 bottom-0 w-full h-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-center bg-cover bg-no-repeat bg-blend-luminosity -z-10 bg-blue-900"
      style="background-image: url('./mountain.webp')"
    >
    </div>
    <p
      slot="content"
      class="max-w-xl"
      set:html={i18n.BENTO_DESCRIPTION_CARD_01}
    />
  </BentoItem>
  <BentoItem
    class="col-span-10 md:col-span-6"
    title={i18n.BENTO_TITLE_CARD_02}
    subtitle={i18n.BENTO_SUBTITLE_CARD_02}
  >
    <div
      slot="image"
      class="absolute left-0 top-0 bottom-0 w-full h-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-center bg-cover bg-no-repeat bg-blend-luminosity -z-10 bg-blue-900"
      style="background-image: url('./pistas.webp')"
    >
    </div>

    <p
      slot="content"
      class="max-w-xl"
      set:html={i18n.BENTO_DESCRIPTION_CARD_02}
    />
  </BentoItem>
  <BentoItem
    class="col-span-10 md:col-span-6"
    title={i18n.BENTO_TITLE_CARD_03}
    subtitle={i18n.BENTO_SUBTITLE_CARD_03}
  >
    <div
      slot="image"
      class="absolute left-0 top-0 bottom-0 w-full h-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-center bg-cover bg-no-repeat bg-blend-luminosity -z-10 bg-blue-900"
      style="background-image: url('./gref.webp')"
    >
    </div>

    <p
      slot="content"
      class="max-w-xl"
      set:html={i18n.BENTO_DESCRIPTION_CARD_03}
    />
  </BentoItem>
  <BentoItem class="col-span-10 md:col-span-4" title={i18n.BENTO_TITLE_CARD_04}>
    <div
      slot="image"
      class="absolute left-0 top-0 bottom-0 w-full h-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-center bg-cover bg-no-repeat bg-blend-luminosity -z-10 bg-blue-900"
      style="background-image: url('./laptop.webp')"
    >
    </div>

    <p
      slot="content"
      class="max-w-xl"
      set:html={i18n.BENTO_DESCRIPTION_CARD_04}
    />
  </BentoItem>
</section>
